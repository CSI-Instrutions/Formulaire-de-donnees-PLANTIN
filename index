<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire PDF - Informations Client</title>
</head>
<body>
    <h1>Formulaire de saisie des informations</h1>
    <form id="formulaire">
        <label for="nof">N°OF:</label>
        <input type="text" id="nof" name="nof" required><br><br>

        <label for="nproduit">N°Produit:</label>
        <input type="text" id="nproduit" name="nproduit" required><br><br>

        <label for="resume">Résumé de fabrication:</label>
        <textarea id="resume" name="resume" required></textarea><br><br>

        <label for="mp">Matière Première (MP):</label>
        <input type="text" id="mp" name="mp" required><br><br>

        <label for="volume">Volume extrait (en l):</label>
        <input type="number" id="volume" name="volume" required><br><br>

        <label for="cuve">Cuve utilisée:</label>
        <input type="text" id="cuve" name="cuve" required><br><br>

        <label for="debut">Date et heure début fabrication:</label>
        <input type="datetime-local" id="debut" name="debut" required><br><br>

        <label for="fin">Date et heure fin fabrication:</label>
        <input type="datetime-local" id="fin" name="fin" required><br><br>

        <label for="ph">Ph:</label>
        <input type="text" id="ph" name="ph" required><br><br>

        <button type="button" onclick="generatePDF()">Envoyer</button>
    </form>

    <!-- Inclusion de la bibliothèque jsPDF pour générer le PDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Récupération des valeurs du formulaire
            let nof = document.getElementById('nof').value;
            let nproduit = document.getElementById('nproduit').value;
            let resume = document.getElementById('resume').value;
            let mp = document.getElementById('mp').value;
            let volume = document.getElementById('volume').value;
            let cuve = document.getElementById('cuve').value;
            let debut = document.getElementById('debut').value;
            let fin = document.getElementById('fin').value;
            let ph = document.getElementById('ph').value;

            // Ajout des informations dans le PDF
            doc.text(`N°OF: ${nof}`, 10, 10);
            doc.text(`N°Produit: ${nproduit}`, 10, 20);
            doc.text(`Résumé de fabrication: ${resume}`, 10, 30);
            doc.text(`Matière Première (MP): ${mp}`, 10, 40);
            doc.text(`Volume extrait (en l): ${volume}`, 10, 50);
            doc.text(`Cuve utilisée: ${cuve}`, 10, 60);
            doc.text(`Date et heure début fabrication: ${debut}`, 10, 70);
            doc.text(`Date et heure fin fabrication: ${fin}`, 10, 80);
            doc.text(`Ph: ${ph}`, 10, 90);

            // Téléchargement du PDF
            doc.save('informations_client.pdf');
        }
    </script>
</body>
</html>
