<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire PDF</title>
</head>
<body>
    <h1>Informations client</h1>
    <form id="formulaire">
        <label for="nom">Nom:</label>
        <input type="text" id="nom" name="nom" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="message">Message:</label>
        <textarea id="message" name="message" required></textarea><br><br>

        <button type="button" onclick="generatePDF()">Envoyer</button>
    </form>

    <!-- Importation de la bibliothèque jsPDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Récupération des valeurs du formulaire
            let nom = document.getElementById('nom').value;
            let email = document.getElementById('email').value;
            let message = document.getElementById('message').value;

            // Ajout du contenu dans le PDF
            doc.text(`Nom: ${nom}`, 10, 10);
            doc.text(`Email: ${email}`, 10, 20);
            doc.text(`Message: ${message}`, 10, 30);

            // Téléchargement du PDF
            doc.save('informations_client.pdf');
        }
    </script>
</body>
</html>
